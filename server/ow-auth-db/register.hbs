<div class="container-fluid">
    <div class="row" >
        <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3">
            <!-- <img src="/img/chhs.jpg"/> -->
            <h1  style="text-align:center"> Welcome to CHHS's </h1>
            <h1 style="text-align:center" > Foster Care Management Tool</h1>
            </br>
            </br>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
            {{#if info}}
                <div class="bg-info alert">
                    <span>{{info}}</span>
                </div>
            {{/if}}
            {{#if warning}}
                <div class="bg-warning alert">
                    <span>{{warning}}</span>
                </div>
            {{/if}}
        </div>
    </div>
    <div class="row">
        <form class="form-signin col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4" role="form" action="/register" method="post">
            <h2 class="form-signin-heading" style="text-align:center">Create an account</h2>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input required name="username" type="email" id="inputEmail" class="form-control"
                   placeholder="Email address" required autofocus>
            <label for="inputLastName" class="sr-only">First Name</label>
            <input required name="firstname" type="firstname" id="inputFirstName" class="form-control"
                   placeholder="First Name" required>
            <label for="inputLastName" class="sr-only">Last Name</label>
            <input required name="lastname" type="lastname" id="inputLastName" class="form-control"
                   placeholder="Last Name" required>
            <label for="inputZipCode" class="sr-only">Zip Code</label>
            <input required name="zipcode" type="zipcode" id="inputZipCode" class="form-control"
                   placeholder="Zip Code (e.g. 94102)" required>
            <input id="returnUrl" name="returnUrl" type="hidden">
            <button class="btn btn-lg btn-primary btn-block" type="submit" id="submit">Create account</button>
        </form>
    </div>
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-4 col-sm-offset-4">
            <a href="/login">Return to login page</a>
        </div>
    </div>
</div>